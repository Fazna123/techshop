        <section class="sec-product-detail bg0 p-t-65 p-b-60">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-7 p-b-30">
                        <div class="p-l-25 p-r-30 p-lr-0-lg">
                            <div class="wrap-slick3 flex-sb flex-w">
                                <div class="wrap-slick3-dots"></div>
                                <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

                                <div class="slick3 gallery-lb">
                                    <% if (product.image && product.image.length> 0) {
                                        for(let i=0;i< product.image.length;i++) { %>
                                            <div class="item-slick3"
                                                data-thumb="/productImages/<%= product.image[i] %>">
                                                <div class="wrap-pic-w pos-relative">
                                                    <img src="/productImages/<%= product.image[i] %>" alt="IMG-PRODUCT">

                                                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04"
                                                        href="/productImages/<%= product.image[i] %>">
                                                        <i class="fa fa-expand"></i>
                                                    </a>
                                                </div>
                                            </div>

                                            <% } }%>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-6 col-lg-5 p-b-30">
                        <div class="p-r-50 p-t-5 p-lr-0-lg">
                            <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                                <%= product.name %>
                            </h4>

                            <!-- <span class="mtext-106 cl2">
                                <%= '₹' + product.price +'/-'%>
                            </span> -->
                            <% if (product.offer_price !== undefined && product.offer_price !== 0) { %>
                                <span class="stext-105 cl2" style="text-decoration: line-through;">
                                  <%= '₹ ' + product.price + '/-' %>
                                </span>
                                <span class="stext-118 cl2 p-l-3">
                                  <%= '₹ ' + product.offer_price + '/-' %>
                                </span>
                              <% } else { %>
                                <span class="stext-105 cl2">
                                  <%= '₹ ' + product.price + '/-' %>
                                </span>
                              <% } %>

                            <p class="stext-102 cl10 p-t-23">
                                <%= product.description%>
                            </p>


                            <div class="p-t-33 m-l-0 p-l-0">

                                <!-- <div class="flex-w flex-r-m p-b-10">
                                    <div class="size-203 flex-c-m respon6">
                                        Color
                                    </div>
                            
                                    <div class="size-204 respon6-next">
                                        <div class="rs1-select2 bor8 bg0">
                                            <select class="js-select2" name="time">
                                                <option>Choose an option</option>
                                                <option>Red</option>
                                                <option>Blue</option>
                                                <option>White</option>
                                                <option>Grey</option>
                                            </select>
                                            <div class="dropDownSelect2"></div>
                                        </div>
                                    </div>
                                </div> -->
                            
                                <div class="flex-w flex-l-m p-b-10">
                                    <form action="/product-detail" method="post">
                                        <div class="size-204 flex-w flex-m respon6-next">
                                        
                                            <div class="wrap-num-product flex-w m-r-20 m-tb-20">
                                                <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                                    <i class="fs-16 zmdi zmdi-minus"></i>
                                                </div>
                                        
                                                <input class="mtext-104 cl3 txt-center num-product" type="number" name="numproduct" value="1">
                                        
                                        
                                                <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                                    <i class="fs-16 zmdi zmdi-plus"></i>
                                                </div>

                                                <input type="hidden" name="product_id" value="<%= product._id %>">

                                            </div>
                                        
                                            <button class="flex-c-m stext-101 cl0 size-101 bg3 bor1 hov-btn3 p-lr-15 trans-04" type="submit" value="AddToCart">
                                                Add to cart
                                            </button>
                                        
                                        </div>
                                    </form>

                                    <br><br>
                                    <% if(typeof message !=='undefined' ){ %>
                                        <div class="alert alert-warning m-t-10" role="alert" id="invalidAlert">
                                            <h5>
                                                <%= message%>
                                            </h5>
                                        </div>
                                    <% } %>


                                    <div class="size-204 flex-w flex-m respon6-next">
                                    
                                        <div class="flex-w m-tb-100">
                                            <button class="flex-c-m stext-101 cl0 size-101 bg3 bor1 hov-btn3 p-lr-15 trans-04"
                                                type="button" value="AddToCart">
                                                <a href="/cart" style="color:white;">
                                                    Go to Cart
                                                </a>
                                            </button>
                                        </div>
                                    </div>
                                
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bg6 flex-c-m flex-w size-302 m-t-73 p-tb-15">   
                <span class="stext-107 cl6 p-lr-25">
                    <%= product.category %>
                </span>
            </div>
        </section>

