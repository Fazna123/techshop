                    <div class="slick2">
                        <% if (products.length > 0) {
                          for (let i = 0; i < products.length; i++) {
                            const product = products[i];
                            const hasDeal = product.offer_price !== undefined && product.offer_price !== 0;
                        %>
                            <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
                              <div class="block2">
