<section class="section-slide">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <% if (banner && banner.length > 0) {
                for (let i = 0; i < banner.length; i++) { %>
                    <li data-target="#carouselExampleIndicators" data-slide-to="<%= i %>" <% if (i === 0) { %> class="active" <% } %>></li>
                <% }
            } %>
        </ol>

        <div class="carousel-inner">
            <% if (banner && banner.length > 0) {
                for (let i = 0; i < banner.length; i++) { %>
                    <div class="carousel-item <% if (i === 0) { %> active <% } %>">
                        <div class="item-slick1 bg-overlay1"
                            style="background-image: url('/productImages/<%= banner[i].image %>'); height: 50vh">
                            <div class="container h-full">
                                <div class="flex-col-c-m h-full p-t-100 p-b-60 respon5">
                                    <div>
                                        <span class="mtext-102 txt-center cl0 respon2">
                                            
                                        </span>
                                    </div>

                                    <div>
                                        <h2 class="ltext-105 txt-center cl0 p-t-22 p-b-20 respon1">
                                            <%= banner[i].title %>
                                        </h2>
                                    </div>

                                    <div style="margin-bottom: 15%;">
                                        <span class="mtext-101 txt-center cl0 p-b-20 respon2">
                                            <%= banner[i].subtitle %>
                                        </span>
                                    </div>

                                    <div>
                                        <a href="<%= banner[i].url %>"
                                            class="flex-c-m stext-118 cl0 size-101 bg3 bor1 hov-btn3 p-lr-15 trans-04">
                                            Buy Now
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }
            } %>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>





