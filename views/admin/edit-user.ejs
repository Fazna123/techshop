

<%- include('../layouts/adminheader.ejs') -%>



<div class="container" style="height: 100vh;">
    <div class="flex-w flex-tr" style="display: flex; justify-content: center; align-items: center; margin: auto;">
        <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md" style="background-color: rgba(209, 184, 184, 0.664); margin-top: 10%;">
            
                <h4 class="mtext-105 cl2 txt-center p-b-30">
                    Edit User Details
                </h4> 


                <form action="" method="POST">

                    <label for="name" class="stext-111">Edit Name:</label>
                    <div class="bor8 m-b-20 how-pos4-parent">
                        <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" id="name" type="name" name="name" placeholder="Enter name" value="<%=user.name%>" required>
                    </div>

                    <label for="email" class="stext-111">Edit Email Address:</label>
                    <div class="bor8 m-b-20 how-pos4-parent">
                        <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" id="email" type="email" name="email" placeholder="Enter Email" value="<%=user.email%>" required>
                    </div>

                    <label for="mobile" class="stext-111">Edit Mobile No.:</label>
                    <div class="bor8 m-b-20 how-pos4-parent">
                        <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" id="mobile" type="text" name="mbno" placeholder="Enter Mobile No." value="<%=user.mobile%>" required>
                    </div>

                    <div class="m-b-20 d-flex flex-direction-coloumn" style="justify-content: space-around;">
                        <label>Verified</label>
                        <input type="radio" name="verify" value="1" <% if(user.is_verified == 1){%> checked <% } %> >
                        <label>UnVerified</label>
                        <input type="radio" name="verify" value="0" <% if(user.is_verified == 0){%> checked <% } %> >
                    </div>
                                        
                    <input type="hidden" name="id" value="<%=user._id%>">

                    <!-- <input type="submit" value="Update User"> -->
                    <button class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer" type="submit" value="Update User">
                        Update User
                    </button>
                    
                </form>


                <div class="container" style="display: flex; justify-content: space-between;">
                    <a href="/admin/useradd" style="color:maroon">Back</a>
                </div>
            

            </div>
 
        </div>
    </div>
</section>	
<%- include('../layouts/adminfooter.ejs') -%>

