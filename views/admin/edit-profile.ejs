    <div class="container">
        <div class="flex-w flex-tr" style="display: flex; justify-content: center; align-items: center; margin: auto;">
            <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md" style="background-color: rgba(209, 184, 184, 0.664); margin-top: 10%;">

                <h4 class="mtext-105 cl2 txt-center p-b-30">
                    Edit Profile Details
                </h4>

                <form action="" method="post" enctype="multipart/form-data">

                    <div class="bor8 m-b-20 how-pos4-parent" style="display: flex; flex-direction: column; justify-content: center; align-items: center;"">
                        <img src="/userImages/<%= admin.image %>" width="150px" height="80px" alt="<%= admin.image %>" style="margin: auto; padding-top: 5%;">
                        <br>
                        <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="file" name="userImage" class="text-center" >
                        <input type="hidden" name="user_id" value="<%=admin._id%>">
                    </div>
                    
                    <div class="bor8 m-b-20 how-pos4-parent">
                        <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="text" name="name" value="<%= admin.name%>" placeholder="Enter name" required>
                    </div>

                    <div class="bor8 m-b-20 how-pos4-parent">
                        <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="email" name="email" value="<%= admin.email%>" placeholder="Enter email" required>
                    </div>

                    <div class="bor8 m-b-20 how-pos4-parent">
                        <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="number" name="mbno" value="<%= admin.mobile%>" placeholder="Enter Mobile" required>
                    </div>
                    
                    <button class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer" type="submit" value="Update Profile">
                        Update
                    </button>
                    

                </form>


            </div>
 
        </div>
    </div>
</section>	



