<%- include('../layouts/header.ejs') -%>

<%- include('../layouts/adminheader.ejs') -%>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        overflow-x: auto;
        /* Enable horizontal scroll on smaller screens */
        margin-left: 0px; /* Adjust the left margin */
        margin-right: 0px; /*Adjust the right margin */ 
    }

    th,
    td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        position: sticky;
        top: 0;
        background-color: #fff;
        /* Ensure header is on top with a white background */
    }

    /* Define responsive font sizes for better readability on smaller screens */
    @media (max-width: 768px) {
        table {
            font-size: 12px;
            /* Adjust font size as needed */
        }

        th {
            display: none;
            /* Hide thead on small screens */
        }

        td {
            display: block;
            /* Display td as block elements on small screens */
            width: 100%;
        }
        button.stext-101.export-excel {
            display: none; /* Hide the export excel button on smaller screens */
        }

        /* Show only PDF button on smaller screens */
        button.stext-101.pdf {
            display: block !important;
            width: 100% !important;
        }
    }
</style>

<div class="col-lg-10 col-md-12">
        <div class="container-fluid">
            <div class="d-flex flex-grow-1" style="display: flex; justify-content: center; align-items: center;">
                <div class="size-210 bor10 p-lr-30 p-t-20 p-b-70 p-lr-2-lg w-full-md" style="flex: 1; margin-left: 5%; margin-right: 5%;">


                    <div class="container" style="display: flex; justify-content:left;margin-left: 0%;">
                        <a href="/admin/sales-report" style="color:maroon;text-decoration: underline;">Back</a>
                    </div>
        
                    <div class="container-fluid d-flex" style="justify-content:end;">
                    <button class="stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-5 trans-04 pointer export-excel" style="flex-shrink: 0; width:12%; margin-right:1%;">
                        <a href="/admin/export-excel-this-month" style="text-decoration: none; color: white;">Export Excel</a>
                    </button>

                    <button class="stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-5 trans-04 pointer pdf" style="flex-shrink: 0; width:12%;">
                        <a href="/admin/download-pdf-this-month" style="text-decoration: none; color: white;">Download PDF</a>
                    </button>

                    </div>
        
                    <div class="overflow-x:auto;">
                    <table class="table table-striped mt-5" width="30%" style="flex: 1;width:100%; background-color:white;border: 1px solid #cecccc;">
        
                        <tr style="background-color: rgba(209, 184, 184, 0.664); color: maroon;">
                                    <th class="serial">SNo.</th>
                                    <th>Date</th>
                                    <th>Invoice ID</th>
                                    <th>Customer Name</th>
                                    <th>Payment Method</th>
                                    <th>Amount</th>
                                   
                                    
                                </tr>
        
                                <% if(order.length>0){
                                    for(let i=0;i< order.length;i++){ %>
                                        <tr>
                                            <td style="padding-left: 1.5%;"><%= i+1 %></td>
                                            <td>
                                                <%= new Date(order[i].createdAt).toLocaleDateString('en-US', {
                                                    year: 'numeric',
                                                    month: 'short',
                                                    day: 'numeric',
                                                  }) %>
                                            </td>
                                            <td>
                                                <%= order[i].orderSerialNumber %>
                                            </td>
                                            <td>
                                                <%= order[i].userName%>
                                            </td>
        
                                            <td>
                                                <%= order[i].paymentMethod %>
                                            </td>
                                            <td>
                                                <%= order[i].amountPayable %>
                                            </td>
                                            
                                            
                                                                                         
                                        </tr>
                                        <% } %>
        
        
        
                                            <% }else{ %>
                                                <tr>
                                                    <td colspan="5">Orders Not Found</td>
                                                </tr>
                                        <% } %>
                                
                        </table>
                    </div>

                        <div class="col-sm-10 col-lg-10 m-b-50" style="text-align: end;">
    
                                <hr style="height: 1px; background-color: rgb(161, 32, 32); margin-left: 20%;">
                                <div class="flex-w flex-t p-t-5 p-b-5">
                                    
                                    <div class="size-208">
                                        <span class="mtext-101 cl2">
                                            Total:
                                        </span>
                                    </div>
    
                                    <div class="size-209 p-t-1">
                                        <span id="total" class="mtext-110 cl2">
                                            <%= totalSales %>
                                        </span>
                                    </div>
                                </div>
    
                            </div>
                        </div>
                        
        
                    </div>
                </div>
            </section>
</div>
</div>
</section>	
<%- include('../layouts/footer.ejs') -%>