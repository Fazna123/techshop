
<%- include('../layouts/adminheader.ejs') -%>

<div class="col-lg-10 col-md-12">
    <div class="container">
        <div class="flex-w flex-tr" style="display: flex; justify-content: center; align-items: center; margin: auto;">
            <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md" style="background-color: rgba(209, 184, 184, 0.664); margin-top: 10%;">
            
                <h4 class="mtext-105 cl2 txt-center p-b-30">
                    Edit Category Details
                </h4> 

                
                <form action="" method="POST" enctype="multipart/form-data">

                    <div class="bor8 m-b-20 how-pos4-parent" style="display: flex; flex-direction: column; justify-content: center; align-items: center;"">
                        <img src="/productImages/<%= category.image %>" width="150px" height="150px" alt="<%= category.image %>" style="margin: auto; padding-top: 5%;">
                        <br>
                        <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="file" name="productImage" class="text-center" id="image" value="<%=category.image%>">
                        <input type="hidden" name="category_id" value="<%=category._id%>">
                    </div>

                    <label for="categoryName" class="stext-111">Category Name:</label>
                    <div class="bor8 m-b-20 how-pos4-parent">
                        
                        <input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="name" id="categoryName" name="name" placeholder="Enter name" value="<%=category.name%>" required>
                    </div>


                    <div class="m-b-20 d-flex flex-direction-coloumn" style="justify-content: space-around;">
                        <label>Active</label>
                        <input type="radio" name="active" value="1" <% if(category.is_active == true){%> checked <% } %> >
                        <label>Not in Use</label>
                        <input type="radio" name="active" value="0" <% if(category.is_active == false){%> checked <% } %> >
                    </div>
                                        
                    <input type="hidden" name="id" value="<%=category._id%>">

                    <button class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer" type="submit" value="Update Category">
                        Update Category
                    </button>
                    
                </form>


                <div class="container" style="display: flex; justify-content: space-between;">
                    <a href="/admin/category" style="color:maroon; text-decoration: underline;">Back</a>
                </div>
            

            </div>
 
        </div>
    </div>
</section>	
<%- include('../layouts/footer.ejs') -%>

